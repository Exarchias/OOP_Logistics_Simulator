<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.CreateProductController">
    <children>
      <VBox>
         <children>
            <HBox VBox.vgrow="ALWAYS">
               <children>
                    <TextField fx:id="filterField" prefHeight="27.0" prefWidth="272.0" promptText="Search">
                     <HBox.margin>
                        <Insets left="400.0" right="5.0" />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox VBox.vgrow="NEVER">
               <children>
                  <VBox>
                     <children>
                            <TextField fx:id="txt_productId" promptText="Product Id">
                           <VBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </VBox.margin>
                        </TextField>
                            <TextField fx:id="txt_productName"  promptText="Product Name">
                           <VBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </VBox.margin>
                        </TextField>
                            <TextField fx:id="txt_productType" promptText="Product Type">
                           <VBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </VBox.margin>
                        </TextField>
                        <TextField fx:id="txt_manufacturedDate" layoutX="20.0" layoutY="125.0" promptText="manufactured date">
                           <VBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </VBox.margin>
                        </TextField>
                        <TextField fx:id="txt_expiredDate" layoutX="15.0" layoutY="120.0" promptText="expired date">
                           <VBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </VBox.margin>
                        </TextField>
                        <TextField fx:id="txt_productPrice" layoutX="20.0" layoutY="160.0" promptText="Product Price">
                           <VBox.margin>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </VBox.margin>
                        </TextField>
                        <VBox>
                           <children>
                                  <Button fx:id="create_button" mnemonicParsing="false"  prefHeight="40.0" prefWidth="228.0" style="-fx-background-color: #039BE5; -fx-background-radius: 10;" text="Create product">
                                 <VBox.margin>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </VBox.margin>
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Button>
                           </children>
                           <VBox.margin>
                              <Insets right="5.0" top="100.0" />
                           </VBox.margin>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </VBox>
                    <TableView fx:id="table_product"  HBox.hgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="col_productId" prefWidth="75.0" text="Product Id" />
                            <TableColumn fx:id="col_productName" prefWidth="75.0" text="Product Name" />
                            <TableColumn fx:id="col_productType" prefWidth="78.0" text="Product Type" />
                            <TableColumn fx:id="col_manufacturedDate" prefWidth="85.0" text="Manufactured Date" />
                            <TableColumn fx:id="col_expiredDate" minWidth="0.0" prefWidth="85.0" text="Expired Date" />
                        <TableColumn fx:id="col_productPrice" prefWidth="159.0" text="Product Price" />
                        </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                    </TableView>
               </children>
               <VBox.margin>
                  <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
      <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="750.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
    </children>
</AnchorPane>
